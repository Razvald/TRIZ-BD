<UserControl x:Class="OnlineShop_MVVM_.UserControls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineShop_MVVM_.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" Height="50">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="85" />
        </Style>
    </UserControl.Resources>

    <Canvas>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Width="800">

            <Label Content="Онлайн магазин" FontSize="30" Margin="0,0,200,0"/>
            <Button Content="Вход" Click="btnLogin_Click"/>
            <Button Content="Данные ПВЗ" Click="btnData_Click"/>
            <Button Content="Товары" Click="btnProducts_Click"/>
            <Button Content="Статистика" Click="btnStatistic_Click"/>
        </StackPanel>
    </Canvas>
</UserControl>
